{
  "name": "sglj-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "backend"
  ],
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "npm run dev --workspace=sglj-backend",
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "build:frontend": "tsc && vite build",
    "build:backend": "npm run build --workspace=sglj-backend",
    "start:backend": "npm run start --workspace=sglj-backend",
    "build": "npm run build:frontend && npm run build:backend",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  }
}
